<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Kp_Product>
			<version>1.0.0</version>
		</Kp_Product>
	</modules>
	<admin>
		<routers>
			<product>
				<use>admin</use>
				<args>
					<module>Kp_Product</module>
                    <frontName>product</frontName>
				</args>
			</product>
		</routers>
	</admin>
	<adminhtml>
		<menu>
	        <product translate="title" module="product">
	            <title>Product</title>
	            <sort_order>40</sort_order>
	            <children>
	                <manage translate="title" module="product">
	                    <title>Manage Products</title>
	                    <action>product/adminhtml_product/</action>
	                    <sort_order>0</sort_order>
	                </manage>
	            </children>
	         </product>
	     </menu>
	</adminhtml>
	<global>
		<helpers>
            <product>
                <class>Kp_Product_Helper</class>
            </product>
        </helpers>
        <blocks>
            <product>
                <class>Kp_Product_Block</class>
            </product>
        </blocks>
        <models>
            <product>
                <class>Kp_Product_Model</class>
                <resourceModel>product_resource</resourceModel>
            </product>
            <product_resource>
                <class>Kp_Product_Model_Resource</class>
                <deprecatedNode>product_mysql4</deprecatedNode>
                <entities>
                    <product>
                        <table>product</table>
                    </product>
                </entities>
            </product_resource>
        </models>
        <resources>
        	<product_setup>
        		<setup>
        			<module>Kp_Product</module>
        		</setup>
        		<connection>
        			<use>core_setup</use>
        		</connection>
        	</product_setup>
        	<product_write>
        		<connection>
        			<use>core_write</use>
        		</connection>
        	</product_write>
        	<product_read>
        		<connection>
        			<use>core_read</use>
        		</connection>
        	</product_read>
        </resources>
	</global>	
</config>